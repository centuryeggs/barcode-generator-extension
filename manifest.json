{
  "name": "Barcode Generator",
  "description": "Generate barcodes",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": [
    "clipboardRead"
  ],
  "action": {
    "default_icon": {
      "32": "/images/scanner32x32.png"
    },
    "default_title": "Barcode Generator",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+B",
        "mac": "MacCtrl+B"
      },
      "description": "Opens popup.html"
    }
  }
}